@model ProjectMVC.Models.Interested

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <div>
        <h1>Hello @Model.FirstName @Model.LastName</h1>
    </div>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>ID</th>
        </tr>
        <tr>
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.Email</td>
            <td>@Model.ID</td>
        </tr>
    </table>
    <br />
    <div>
        Please wait for an e-mail from the college for more information.
        After receiving the e-mail, follow the instructions to continue the process.
        <br /><br />
        We wish lots of success.<br />
        Yours,<br />
        SCE portal development team<br />
    </div>
</body>
</html>
