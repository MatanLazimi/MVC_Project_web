@model ProjectMVC.Models.Manager
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>

    <h2>The Manager Details</h2>
    <div>
        <b style="font-size:20px">Welcom back - @Model.FirstName, @Model.ID </b>
    </div>
    <table>
        <tr>
            <th>ID Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Gender</th>
        </tr>
        <tr>
            <td>@Model.ID</td>
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td>
            <td>@Model.Email</td>
            <td>@Model.Address</td>
            <td>@Model.Phone</td>
            <td>@Model.Gender</td>
        </tr>
    </table>
    <br />
    <form action="Enter">
        <br />
        <input id="Submit1" type="submit" value="Return" />
    </form>
    <img src="http://www.vidis.co.il/images/page/259Ful.jpg" alt="Trulli" width="700" height="333">

</body>
</html>
